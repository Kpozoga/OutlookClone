@model MailModel

@{
    ViewData["Title"] = "Outlook Clone - Mail detail";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <div class="form-group">
                    <label for="from_id" class="control-label">From</label>
                    <div id="from_id">
                        @Model.FromId
                    </div>
                </div>

                <div class="form-group">
                    <label for="subject_id" class="control-label">Subject</label>
                    <div id="subject_id">
                        @Model.Subject
                    </div>
                </div>

                <div class="form-group">
                    <label for="body_id" class="control-label">Body</label>
                    <textarea id="body_id" class="form-control" rows="10" name="body" placeholder="Text of your message">
@Model.Body                    
</textarea>
                </div>
            </div>
        </div>
    </div>
</div>