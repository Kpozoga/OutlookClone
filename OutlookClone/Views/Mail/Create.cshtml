@model MailModel

@{
    ViewData["Title"] = "Outlook Clone - Create mail";
}

@{
    var contacts = (List<ContactModel>) ViewData["ContactList"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                @using (Html.BeginForm("CreatePost", "Mail", FormMethod.Post))
                {
                    <form>
                        <div class="form-group">
                            <label for="to_id" class="control-label">Recipient</label>
                            <select class="form-control" name="to" id="to_id" multiple>
                                @foreach (var contact in contacts)
                                {
                                    <option value="@contact.Id">@contact.FullName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="subject_id" class="control-label">Subject</label>
                            <input type="text" class="form-control" id="subject_id" name="subject" placeholder="Subject">
                        </div>

                        <div class="form-group">
                            <label for="body_id" class="control-label">Body</label>
                            <textarea id="body_id" class="form-control" rows="10" name="body" placeholder="Text of your message"></textarea>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>

                    </form>
                }
            </div>
        </div>
    </div>
</div>