@model GroupModel

@{
    ViewData["Title"] = "Outlook Clone - Create group";
}

@{
    var contacts = (List<ContactModel>)ViewData["ContactList"];
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                @using (Html.BeginForm("CreatePost", "Group", FormMethod.Post))
                {
                    <form>
                        <div class="form-group">
                            <label for="to_id" class="control-label">Members (Press hold 'Ctrl' for multiple choice)</label>
                            <select class="form-control" name="to" id="to_id" multiple>
                                @foreach (var contact in contacts)
                                {
                                    <option value="@contact.Id">@contact.FullName</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="group" class="control-label">Group Name</label>
                            <input type="text" class="form-control" id="group_id" name="groupname" placeholder="Group">
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Create Group</button>
                        </div>

                    </form>
                }
            </div>
        </div>
    </div>
</div>